# abort script on any command that exits with a non zero value
set -e

MARIADB_VERSION=10.1.18
MY_DIR=$(pwd)

cd mariadb
tar xvf mariadb-${MARIADB_VERSION}-linux-x86_64.tar.gz
cp mariadb-${MARIADB_VERSION}-linux-x86_64/bin/mysql ${BOSH_INSTALL_TARGET}/mysql

rm -rf mariadb-${MARIADB_VERSION}-linux-x86_64
rm mariadb-${MARIADB_VERSION}-linux-x86_64.tar.gz
cd ${MY_DIR}
